{
    "compilerOptions": {
        "target": "es5",
        "module": "umd",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir":"./dist",
        "baseUrl": ".",
        "paths": {
            "jquery": ["node_modules/jquery/dist/jquery"],
            "moment": ["node_modules/moment/min/moment-with-locales.min"],
            "src/*": ["./src/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "types": ["moment"],
    "typeRoots": [ "node_modules/@types"]
}